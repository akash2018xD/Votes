<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292426"
    android:fitsSystemWindows="true"
    tools:context="gdgsearch.com.gdgfinals.MainActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:tint="#5e5458"
        android:layout_below="@+id/logo"
        android:src="@drawable/ic_fingerprint_black_48dp"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edNum"
        android:textColor="#ffffff"
        android:maxLength="12"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp">

        <Button android:text="1"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/butGrid1"
            android:textSize="24dp"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button android:text="2"
            android:layout_row="0"
            android:id="@+id/butGrid2"
            android:textSize="24dp"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="1" />

        <Button android:text="3"
            android:layout_row="0"
            android:id="@+id/butGrid3"
            android:textSize="24dp"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="2" />

        <Button android:text="4"
            android:layout_row="1"
            android:textSize="24dp"
            android:id="@+id/butGrid4"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="0" />

        <Button android:text="5"
            android:layout_row="1"
            android:textSize="24dp"
            android:id="@+id/butGrid5"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="1" />

        <Button android:text="6"
            android:layout_row="1"
            android:id="@+id/butGrid6"
            android:textSize="24dp"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="2" />

        <Button android:text="7"
            android:layout_row="2"
            android:id="@+id/butGrid7"
            android:textSize="24dp"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="0" />

        <Button android:text="8"
            android:layout_row="2"
            android:textSize="24dp"
            android:id="@+id/butGrid8"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="1" />

        <Button android:text="9"
            android:layout_row="2"
            android:textSize="24dp"
            android:id="@+id/butGrid9"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="2" />

        <Button
            android:gravity="center"
            android:text="0"
            android:id="@+id/butGrid0"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:layout_row="3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="1" />

        <Button
            android:gravity="center"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
           android:background="@drawable/delete"
            android:textSize="24dp"
            android:onClick="delete"
            android:textColor="#ffffff"
            android:layout_row="3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="0" />
        <Button
            android:gravity="center"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_done_white_48dp"
            android:textColor="#ffffff"
            android:layout_row="3"
            android:onClick="confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="2" />

    </GridLayout>

</RelativeLayout>
